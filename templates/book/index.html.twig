{% extends 'base.html.twig' %}

{% block title %}Choix par auteur{% endblock %}

{% block body %}
    <main>
        <h1>Book bazar</h1>
        <br>
        <div class="table-container">
            <table  >
                <thead>
                    <td>Titre</td>
                    <td>Auteur</td>
                    <td>Genre</td>
                    <td>Actions</td>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td>
                                {{ book.name }}
                            </td>
                            <td>
                                <ul>
                                    {% for author in book.author %}
                                        <li>
                                        {{ author.name }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    {% for genre in book.genres %}
                                        <li>
                                        {{ genre.name }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                {# <a href="{{ path('app_books_edit', {id: book.id}) }}" class="btn-like">Modifier</a> #}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
